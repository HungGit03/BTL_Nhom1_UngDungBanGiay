<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/iv_sanpham"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_media_24"
            android:layout_weight="1.5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/tv_tensp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="16dp"
                android:text="Nike Air Force 1 Fontanka"/>
            <TextView
                android:id="@+id/tv_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/vnd"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="2000000Đ"/>
            <TextView
                android:id="@+id/tv_soluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_chietkhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/red"
                android:background="@color/iconpeson"
                android:text="-10%"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/title_tongtien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_weight="3.5"
            android:textSize="16dp"
            android:text="Tổng cộng: "/>
        <TextView
            android:id="@+id/tv_tongtien"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/vnd"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:text="19000000"/>
    </LinearLayout>

</LinearLayout>